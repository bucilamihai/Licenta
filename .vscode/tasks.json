{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Backend",
      "type": "shell",
      "command": "./gradlew bootRun",
      "options": {
        "cwd": "${workspaceFolder}/app/backend"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Frontend",
      "type": "shell",
      "command": "ionic serve",
      "options": {
        "cwd": "${workspaceFolder}/app/frontend"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Both",
      "dependsOn": ["Start Backend", "Start Frontend"],
      "dependsOrder": "parallel"
    },
    {
      "label": "Start Flask Recommendation System",
      "type": "shell",
      "command": "python",
      "args": ["app.py"],
      "problemMatcher": [],
      "isBackground": false,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}/app/recommendation-system"
      }
    }
  ]
}
